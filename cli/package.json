{
  "name": "nodetsp",
  "type": "module",
  "version": "2.0.0",
  "description": "A starter for creating a TypeScript package.",
  "author": "Harsh Thakur <harshprojects2002@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/devharshthakur/nodetsp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devharshthakur/nodetsp.git"
  },
  "bugs": {
    "url": "https://github.com/devharshthakur/nodetsp/issues"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "bumpp": "^10.3.2",
    "tsdown": "^0.18.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.2",
    "picocolors": "^1.1.1"
  }
}
